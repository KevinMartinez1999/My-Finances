<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_registro">

    <fragment
        android:id="@+id/navigation_registro"
        android:name="com.example.myfinances.fragments.RegistroFragment"
        android:label="@string/transacciones"
        tools:layout="@layout/fragment_registro">
        <action
            android:id="@+id/action_navigation_registro_to_HacerRegistroFragment"
            app:destination="@id/HacerRegistroFragment" />
        <action
            android:id="@+id/action_navigation_registro_to_EditarRegistroFragment"
            app:destination="@id/EditarRegistroFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_estadisticas"
        android:name="com.example.myfinances.fragments.EstadisticasFragment"
        android:label="@string/estadisticas"
        tools:layout="@layout/fragment_estadisticas" />
    <fragment
        android:id="@+id/navigation_bienes"
        android:name="com.example.myfinances.fragments.BienesFragment"
        android:label="@string/bienes"
        tools:layout="@layout/fragment_bienes" />
    <fragment
        android:id="@+id/navigation_ajustes"
        android:name="com.example.myfinances.fragments.AjustesFragment"
        android:label="@string/ajustes"
        tools:layout="@layout/fragment_ajustes" />
    <fragment
        android:id="@+id/HacerRegistroFragment"
        android:name="com.example.myfinances.fragments.sub_fragments.HacerRegistroFragment"
        tools:layout="@layout/fragment_hacer_registro">
        <action
            android:id="@+id/action_HacerRegistroFragment_to_navigation_registro"
            app:destination="@id/navigation_registro" />
    </fragment>
    <fragment
        android:id="@+id/EditarRegistroFragment"
        android:name="com.example.myfinances.fragments.sub_fragments.EditarRegistroFragment"
        tools:layout="@layout/fragment_editar_registro">
        <action
            android:id="@+id/action_EditarRegistroFragment_to_navigation_registro"
            app:destination="@id/navigation_registro" />
        <argument
            android:name="register"
            app:argType="com.example.myfinances.data.server.RegistroServer"
            app:nullable="true" />
    </fragment>
</navigation>
